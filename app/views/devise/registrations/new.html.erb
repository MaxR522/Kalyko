            <div class="signin-signup">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class:'sign-in-form'} ) do |f| %>
  <h2 class="title">S'inscrire</h2>

  <%= render "devise/shared/error_messages", resource: resource %>
   

 <%= f.file_field :avatar, id:"file-input" %> 


  <div class="input-field">
    <i class="fa fa-user"></i>
    <%= f.text_field :username, autofocus: true, placeholder:"Nom d'utilisateur"  %>
  </div>

  <div class="input-field">
    <i class="fa fa-google"></i>
    <%= f.email_field :email, autofocus: true, placeholder:"Email"%>
  </div>

  <div class="input-field">
  <i class="fa fa-lock"></i>
  
    <%= f.password_field :password, placeholder:"Mot de passe" %>
  </div>

  <div class="input-field">
  <i class="fa fa-lock"></i>
    <%= f.password_field :password_confirmation, placeholder:" Confirmer mot de passe"  %>
  </div>

  <div class="actions">
    <%= f.submit "S'inscrire", class:"btn solid" %>
  </div>
<% end %>

