 <div class="container">
        <div class="form-container">
            <div class="signin-signup">
                      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{class:'sign-in-form'} )do |f| %>
                        <h2 class="title">Connecter</h2>
                        <div class="input-field">
                           <i class="fa fa-user"></i>
                         
                          <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email" %>
                        </div>

                        <div class="input-field">
                        <i class="fa fa-lock"></i>
                          
                          <%= f.password_field :password, autocomplete: "current-password",placeholder:"mots de passe" %>
                        </div>

                        <% if devise_mapping.rememberable? %>
                          <div class="field">
                            <%= f.check_box :remember_me %>
                            <%= f.label :remember_me %>
                          </div>
                        <% end %>

                        <div  class="action">
                          <%= f.submit "Log in", class:"btn solid" %>
                        </div>
                      
                         <p class="social-text">Se connecter avec une autre plateforme</p>
                       <div class="social-media">
                        <a href="#" class="social-icon">
                            <i class="fa fa-facebook"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fa fa-twitter"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fa fa-linkedin"></i>
                        </a>
                        <a href="#" class="social-icon">
                            <i class="fa fa-google"></i>
                        </a>
                    </div>
                  <% end %>
                   
                  <%= render "devise/registrations/new" %>
            </div>
      </div>
      <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>Je suis nouveaux</h3>
                    <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Esse et debitis illo eius</p>
                    <button class="btn transparent" id="sign-up-btn">S'inscrire</button>
                </div>
                <img src="<%Rails.public_path%>/img/log.svg" alt="" class="image">
            </div>

            <div class="panel right-panel">
